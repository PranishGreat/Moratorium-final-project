<!DOCTYPE html>
<html lang="en">
  <%- include('admin_head_section.ejs') %>

<body class="login-img3-body" style="background-image: 'login-admin.jpg'";>

  <div class="container">
    <form class="login-form" action='/admin_auth' method='POST' enctype="application/x-www-form-urlencoded">
      <div class="login-wrap">
        <p class="login-img"><i class="icon_lock_alt"></i></p>
        <div class="input-group">
          <span class="input-group-addon"><i class="icon_profile"></i></span>
          <input type="text" name="admin_id" class="form-control" placeholder="Admin ID" autofocus>
        </div>
        <div class="input-group">
          <span class="input-group-addon"><i class="icon_key_alt"></i></span>
          <input type="password" name="admin_password" class="form-control" placeholder="Password">
        </div>
        <label class="checkbox">
                <input type="checkbox" value="remember-me"> Remember me
                <span class="pull-right"> <a href="#"> Forgot Password?</a></span>
            </label>
        <button class="btn btn-primary btn-lg btn-block" type="submit">Login</button>
      </div>
    </form>
  </div>


</body>

</html>
